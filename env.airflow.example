# ==============================================
# CONFIGURACIÓN AIRFLOW
# ==============================================
AIRFLOW_UID=50000
AIRFLOW_PROJ_DIR=.

# Usuario web de Airflow
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# ==============================================
# CONFIGURACIÓN BASE DE DATOS AIRFLOW
# ==============================================
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# ==============================================
# CONFIGURACIÓN SCRAPER - CREDENCIALES
# ==============================================
# IMPORTANTE: Reemplaza con tus credenciales reales
USERNAME=tu_usuario_integratel
PASSWORD=tu_password_integratel

# ==============================================
# CONFIGURACIÓN SCRAPER - RUTAS
# ==============================================
DOWNLOAD_PATH=/opt/airflow/proyectos/scraper-integratel/temp
HEADLESS=true

# ==============================================
# CONFIGURACIÓN SCRAPER - FILTROS
# ==============================================
# Opciones a seleccionar (separadas por comas)
OPTIONS_TO_SELECT=CM,OPM

# Configuración de fechas
# DATE_MODE: 1 = fechas manuales | 2 = último mes
DATE_MODE=2
DATE_FROM=2025-09-01
DATE_TO=2025-09-10

# ==============================================
# CONFIGURACIÓN SCRAPER - TIMEOUTS
# ==============================================
MAX_IFRAME_ATTEMPTS=60
MAX_STATUS_ATTEMPTS=60

# ==============================================
# CONFIGURACIÓN SCRAPER - ARCHIVOS
# ==============================================
# Nombres personalizados (opcional)
# GDE_OUTPUT_FILENAME=mi_archivo_gde.xlsx
# DYNAMIC_CHECKLIST_OUTPUT_FILENAME=mi_archivo_checklist.xlsx

# Política de sobrescritura: true = reemplazar, false = no reemplazar
EXPORT_OVERWRITE_FILES=true

# ==============================================
# CONFIGURACIÓN BASE DE DATOS PARA INGESTA
# ==============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=airflow
DB_USER=airflow
DB_PASSWORD=airflow

