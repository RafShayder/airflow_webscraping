# ===========================================
# CONFIGURACIÓN DEL SCRAPER TELEOWS
# ===========================================

# Perfil opcional para seleccionar sección en env.yaml (default, prod, etc.)
# TELEOWS_ENV=default

# Credenciales de acceso al portal
USERNAME=tu_usuario_aqui
PASSWORD=tu_password_aqui

# Configuración de descarga (multiplataforma)
DOWNLOAD_PATH=~/Documents/scraper_downloads

# Configuración de reintentos
MAX_IFRAME_ATTEMPTS=60
MAX_STATUS_ATTEMPTS=60

# Configuración de fechas
# 1 = Fechas manuales | 2 = Último mes
DATE_MODE=2
DATE_FROM=2025-09-01
DATE_TO=2025-09-10

# Opciones a seleccionar en el filtro (separadas por comas)
OPTIONS_TO_SELECT=CM,OPM

# Nombre personalizado opcional para los archivos descargados
# (si se deja vacío, se respeta el nombre proporcionado por el portal)
GDE_OUTPUT_FILENAME=
DYNAMIC_CHECKLIST_OUTPUT_FILENAME=

# Controla qué hacer si el archivo ya existe (true = reemplazar, false = generar nombre incremental)
EXPORT_OVERWRITE_FILES=true
